<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card shadow border-0 p-4">
        <div class="text-center mb-4">
          <i class="fas fa-hotel mb-3" style="font-size: 40px; color: #FF5A5F;"></i>
          <h2 class="font-weight-bold">Welcome back</h2>
          <p class="text-muted">Please enter your details</p>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "your@email.com",
                        input_html: { class: "form-control-lg" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: "••••••••",
                        input_html: { class: "form-control-lg" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-dark btn-lg w-100 mb-3" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <p class="text-muted">
            Don't have an account?
            <%= link_to "Sign up", new_registration_path(resource_name), class: "text-dark text-decoration-none" %>
          </p>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-muted text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</div>
