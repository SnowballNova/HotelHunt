<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card shadow border-0 p-4">
        <div class="text-center mb-4">
          <i class="fas fa-hotel mb-3" style="font-size: 40px; color: #FF5A5F;"></i>
          <h2 class="font-weight-bold">Create an account</h2>
          <p class="text-muted">Join us to start booking</p>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        placeholder: "your@email.com",
                        input_html: { class: "form-control-lg" } %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        placeholder: "••••••••",
                        input_html: { class: "form-control-lg" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        placeholder: "••••••••",
                        input_html: { class: "form-control-lg" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-dark btn-lg w-100 mb-3" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <p class="text-muted">
            Already have an account?
            <%= link_to "Log in", new_session_path(resource_name), class: "text-dark text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
