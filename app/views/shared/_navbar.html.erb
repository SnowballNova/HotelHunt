<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
      <i class="fas fa-hotel navbar-logo me-2"></i>
      <h3 class="logo mb-0">HotelHunt</h3>
    <% end %>

    <% if user_signed_in? %>
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-outline-light" %>
    <% else %>
      <div class="d-flex align-items-center">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-light ms-2" %>
      </div>
    <% end %>
  </div>
</div>
