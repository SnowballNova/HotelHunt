<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-0">Our Hotels</h1>
      <p class="text-muted">Find your perfect accommodation</p>
    </div>
    <%= link_to root_path, class: "btn btn-outline-coral" do %>
      <i class="fas fa-arrow-left me-2"></i>Back to Home
    <% end %>
  </div>

  <div class="row g-4">
    <% @hotels.each do |hotel| %>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <%= image_tag "seaside_hotel.png", class: "card-img-top", alt: hotel.name %>
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div>
                <h5 class="card-title mb-1"><%= hotel.name %></h5>
                <p class="card-text text-muted mb-0">
                  <i class="fas fa-map-marker-alt me-2"></i><%= hotel.address %>
                </p>
              </div>
              <span class="badge bg-coral">
                From <%= number_to_currency(hotel.rooms.minimum(:price_per_night)) %>
              </span>
            </div>

            <div class="d-flex gap-2 mb-3">
              <span class="badge bg-light text-dark">
                <i class="fas fa-bed me-1"></i><%= hotel.rooms.count %> Rooms
              </span>
              <span class="badge bg-light text-dark">
                <i class="fas fa-wifi me-1"></i>WiFi
              </span>
              <span class="badge bg-light text-dark">
                <i class="fas fa-parking me-1"></i>Parking
              </span>
            </div>

            <%= link_to "View Details", hotel_path(hotel), class: "btn btn-outline-coral w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
