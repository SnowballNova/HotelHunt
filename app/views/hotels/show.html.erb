<div class="container mt-4">
  <div class="hotel-header mb-4">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1><%= @hotel.name %></h1>
        <p class="text-muted"><i class="fas fa-map-marker-alt"></i> <%= @hotel.address %></p>
      </div>
      <div class="col-md-4 text-md-end">
        <%= link_to "Back to Hotels", root_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <img src="https://source.unsplash.com/random/1200x800/?hotel" class="img-fluid rounded mb-4" alt="<%= @hotel.name %>">
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Available Rooms</h5>
          <p class="card-text">Starting from <%= number_to_currency(@hotel.rooms.minimum(:price_per_night)) %> per night</p>
        </div>
      </div>
    </div>
  </div>

  <div class="rooms-section mt-4">
    <h2 class="mb-4">Our Rooms</h2>
    <div class="row">
      <% @hotel.rooms.each do |room| %>
        <div class="col-md-4 mb-4">
          <div class="card room-card">
            <img src="https://source.unsplash.com/random/800x600/?hotel-room" class="card-img-top" alt="Room">
            <div class="card-body">
              <h5 class="card-title">Room for <%= pluralize(room.capacity, 'person') %></h5>
              <p class="card-text">
                <strong><%= number_to_currency(room.price_per_night) %></strong> / night
              </p>
              <%= link_to "Book Now", new_room_booking_path(room), class: "btn btn-primary w-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
