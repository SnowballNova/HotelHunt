<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title mb-4">Book this Room</h2>

          <div class="room-details mb-4">
            <h5>Room Details:</h5>
            <p>Capacity: <%= @room.capacity %> persons</p>
            <p>Price: <%= number_to_currency(@room.price_per_night) %> per night</p>
          </div>

          <%= simple_form_for [@room, @booking] do |f| %>
            <%= f.input :starts_at, as: :string, input_html: { data: { controller: "flatpickr" } } %>
            <%= f.input :ends_at, as: :string, input_html: { data: { controller: "flatpickr" } } %>

            <div class="form-actions">
              <%= f.submit "Confirm Booking", class: "btn btn-primary w-100" %>
              <%= link_to "Cancel", room_path(@room), class: "btn btn-outline-secondary w-100 mt-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
