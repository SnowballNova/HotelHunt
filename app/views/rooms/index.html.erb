<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-0">All Rooms</h1>
      <p class="text-muted">Find your perfect room</p>
    </div>
    <%= link_to root_path, class: "btn btn-outline-coral" do %>
      <i class="fas fa-arrow-left me-2"></i>Back to Home
    <% end %>
  </div>

  <div class="row g-4">
    <% @rooms.each do |room| %>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <%= image_tag "cozy_bedroom.png", class: "card-img-top", alt: "Room" %>
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div>
                <h5 class="card-title mb-1">Room for <%= pluralize(room.capacity, 'person') %></h5>
                <p class="card-text text-muted mb-0">
                  <i class="fas fa-hotel me-2"></i><%= room.hotel.name %>
                </p>
              </div>
              <span class="badge bg-coral">
                <%= number_to_currency(room.price_per_night) %>
              </span>
            </div>
            <%= link_to "View Details", room_path(room), class: "btn btn-outline-coral w-100", id: "room-#{room.id}" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
