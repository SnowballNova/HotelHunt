<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path('cozy_bedroom.png') %>');">
  <div class="container">
    <h1>Find your perfect stay</h1>
    <p>Discover a variety of affordable rooms, from cozy stays to luxurious getaways, and book instantly.</p>
    <div class="d-flex gap-3">
      <%= link_to "View All Hotels", hotels_path, class: "btn btn-light" %>
      <%= link_to "Browse All Rooms", rooms_path, class: "btn btn-outline-light" %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <h2 class="mb-4">Featured Hotels</h2>
  <div class="row">
    <% @hotels.first(4).each do |hotel| %>
      <div class="col-md-3">
        <div class="card hotel-card">
          <%= image_tag "cozy_hotel#{rand(1..4)}.png", class: "card-img-top", alt: hotel.name %>
          <div class="card-body">
            <h5 class="card-title"><%= hotel.name %></h5>
            <p class="card-text"><%= hotel.address %></p>
            <p class="card-text">
              <small class="text-muted">
                From <%= number_to_currency(hotel.rooms.minimum(:price_per_night)) %> / night
              </small>
            </p>
            <%= link_to "View Details", hotel_path(hotel), class: "btn btn-outline-coral" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
